@{
    ViewData["Title"] = "ModReeder";
    var host = this.Context.Request.Scheme + "://" + this.Context.Request.Host;
}

@section Styles {
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500" rel="stylesheet">
    <base href="/">
    <script type="text/javascript">window.backendPoint ="@host";</script>
}
<!--Photon Angular :)-->
<div class="row">
    <app-root backendPoint="@host" [backendPoint]="@host"></app-root>
</div>

<environment include="Development">
    @section Scripts
        {
        <script type="text/javascript" src="~/dist/runtime.js"></script>
        <script type="text/javascript" src="~/dist/polyfills.js"></script>
        <script type="text/javascript" src="~/dist/styles.js"></script>
        <script type="text/javascript" src="~/dist/vendor.js"></script>
        <script type="text/javascript" src="~/dist/main.js"></script>
    }
</environment>
<environment exclude="Development">

</environment>